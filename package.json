{
	"name": "lcov-reporter-action",
	"version": "0.2.19",
	"description": "Comments a pull request with the lcov code coverage",
	"license": "MIT",
	"author": "Robert Jefe Lindstaedt <robert.lindstaedt@gmail.com>",
	"repository": "https://github.com/c-commerce/lcov-reporter-action",
	"type": "module",
	"keywords": [
		"actions",
		"pull-request",
		"comment",
		"message"
	],
	"main": "index.js",
	"scripts": {
		"build": "rollup -c",
		"test": "jest --passWithNoTests --coverage",
		"local": "babel-node src/cli",
		"format": "prettier --write src/*.js src/**/*.js"
	},
	"dependencies": {
		"@actions/core": "^1.6.0",
		"@actions/github": "^5.0.0",
		"lcov-parse": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.8.6",
		"@babel/node": "^7.8.4",
		"@rollup/plugin-commonjs": "^11.0.2",
		"@rollup/plugin-json": "^4.0.2",
		"@rollup/plugin-node-resolve": "^7.1.1",
		"babel-jest": "^25.1.0",
		"core-js": "3",
		"jest": "^25.1.0",
		"regenerator-runtime": "^0.13.3",
		"rollup": "^1.32.0",
		"rollup-plugin-node-externals": "^2.1.3",
		"@babel/eslint-parser": "^7.16.3",
    "@babel/eslint-plugin": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-require-path-exists": "^1.1.9"
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/*_test.js",
			"<rootDir>/src/**/*_test.js"
		]
	}
}
