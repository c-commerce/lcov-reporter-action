{
	"name": "lcov-reporter-action",
	"version": "0.2.22",
	"description": "Comments a pull request with the lcov code coverage",
	"license": "MIT",
	"author": "Robert Jefe Lindstaedt <robert.lindstaedt@gmail.com>",
	"repository": "https://github.com/c-commerce/lcov-reporter-action",
	"type": "module",
	"keywords": [
		"actions",
		"pull-request",
		"comment",
		"message"
	],
	"main": "index.js",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"build": "rollup -c",
		"test": "jest --passWithNoTests --coverage",
		"local": "babel-node src/cli",
		"format": "prettier --write src/*.js src/**/*.js",
		"semantic-release": "semantic-release",
		"commit": "git-cz",
		"commitizen": "^4.2.3",
		"conventional-changelog-cli": "^2.1.1",
		"validate-commit-msg": "^2.14.0"
	},
	"dependencies": {
		"@actions/core": "^1.6.0",
		"@actions/github": "^5.0.0",
		"lcov-parse": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.8.6",
		"@babel/eslint-parser": "^7.16.3",
		"@babel/eslint-plugin": "^7.14.5",
		"@babel/node": "^7.8.4",
		"@babel/plugin-proposal-class-properties": "^7.16.0",
		"@babel/preset-env": "^7.9.0",
		"@babel/register": "^7.9.0",
		"@istanbuljs/nyc-config-babel": "^3.0.0",
		"@rollup/plugin-commonjs": "^21.0.1",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.6",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"babel-jest": "^25.1.0",
		"core-js": "3",
		"eslint": "^8.3.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-loader": "^3.0.3",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jest": "^25.3.0",
		"eslint-plugin-no-only-tests": "^2.6.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.1",
		"eslint-plugin-require-path-exists": "^1.1.9",
		"jest": "^25.1.0",
		"regenerator-runtime": "^0.13.3",
		"rollup": "^2.60.1",
		"rollup-plugin-node-externals": "^2.2.0",
		"semantic-release": "^18.0.0",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/exec": "^6.0.2",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^8.0.3"
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/*.spec.js",
			"<rootDir>/src/**/*.spec.js"
		]
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/changelog",
				{
					"changelogFile": "CHANGELOG.md"
				}
			],
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			[
				"@semantic-release/git",
				{
					"assets": [
						"CHANGELOG.md",
						"package.json",
						"dist",
						"package-lock.json"
					],
					"message": "chore(release): Release ${nextRelease.version} - <%=new Date().toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' })%>\n\n${nextRelease.notes}"
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "CHANGELOG.md",
							"label": "Changelog"
						},
						{
							"path": "package.json",
							"label": "Package"
						}
					]
				}
			]
		],
		"fail": false,
		"success": false,
		"branches": [
			"master",
			{
				"name": "develop",
				"prerelease": true
			}
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		},
		"validate-commit-msg": {
			"types": "conventional-commit-types",
			"helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
		}
	}
}
